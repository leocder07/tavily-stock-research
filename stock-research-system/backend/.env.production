# Production Environment Variables for Stock Research System

# API Keys
TAVILY_API_KEY=your_tavily_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/stock_research?retryWrites=true&w=majority
DATABASE_NAME=stock_research

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=["https://your-frontend-domain.com"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Security
JWT_SECRET=your_secure_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Agent Configuration
AGENT_TIMEOUT=60
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=5

# Memory System
MEMORY_BATCH_SIZE=100
MEMORY_CONSOLIDATION_INTERVAL=3600

# Performance
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
ENABLE_METRICS=true
METRICS_PORT=9090

# AWS Configuration (if using S3 for storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=stock-research-bucket

# Feature Flags
ENABLE_PERSONALITY_ANALYSIS=true
ENABLE_REFLECTION_PATTERN=true
ENABLE_ADVERSARIAL_PATTERN=true
ENABLE_MEMORY_PERSISTENCE=true

# External Service URLs
FRONTEND_URL=https://your-frontend-domain.com
API_BASE_URL=https://api.your-domain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# MongoDB Atlas Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/stock_research?retryWrites=true&w=majority

# Tavily API Configuration (Optional - enables real-time intelligence)
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# Multi-Source Sentiment API Keys (Optional - enables professional-grade sentiment analysis)
# Twitter/X API - Real-time social sentiment (30% weight)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here

# Reddit API - Retail investor sentiment from r/wallstreetbets, r/stocks (20% weight)
REDDIT_CLIENT_ID=your-reddit-client-id-here
REDDIT_CLIENT_SECRET=your-reddit-client-secret-here

# News Sentiment APIs (30% weight)
# Option 1: Alpha Vantage (Recommended - provides native sentiment scores)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here
# Option 2: NewsAPI.org (Fallback - requires keyword-based sentiment)
NEWS_API_KEY=your-newsapi-key-here

# Sentiment Configuration
SENTIMENT_USE_MULTI_SOURCE=true  # Set to false to use legacy Tavily-only mode
SENTIMENT_USE_LEGACY_FALLBACK=true  # If true, falls back to Tavily when APIs unavailable

# Custom Sentiment Weights (Optional - must sum to 1.0)
# SENTIMENT_WEIGHT_TWITTER=0.30
# SENTIMENT_WEIGHT_REDDIT=0.20
# SENTIMENT_WEIGHT_NEWS=0.30
# SENTIMENT_WEIGHT_TAVILY=0.20

# Redis Configuration (Optional - enables caching for cost optimization)
# Local Redis: redis://localhost:6379
# Redis Cloud: redis://default:password@redis-xxxxx.cloud.redislabs.com:12345
REDIS_URL=redis://localhost:6379

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# JWT Configuration (for authentication)
JWT_SECRET=your-secure-random-secret-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Cost Optimization Targets
CACHE_HIT_RATE_TARGET=0.70
GPT35_USAGE_TARGET=0.70
COST_PER_QUERY_TARGET=0.13

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Agent Timeout (seconds)
AGENT_TIMEOUT_SECONDS=60

# Cache TTL Configuration (hours)
CACHE_TTL_NEWS=24
CACHE_TTL_SENTIMENT=24
CACHE_TTL_MACRO=168

# BigQuery Data Lake Configuration (Optional - Phase 4)
# Enables petabyte-scale data storage and ML training data export
BIGQUERY_PROJECT_ID=your-gcp-project-id
BIGQUERY_DATASET_ID=stock_research
BIGQUERY_CREDENTIALS_PATH=/path/to/service-account-key.json

# Langfuse Observability (Optional - Phase 3)
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_HOST=https://cloud.langfuse.com
